<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.magic.rain.cn.firstcode.activity.multiply.CameraAlbumActivity">

    <Button
        android:id="@+id/button_take_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_phone"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button_choose_from_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_form_album"
        android:textAllCaps="false"
        />

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/image_view_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
